<Page
    x:Class="Win2ch.Controls.WebMPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win2ch.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <MediaElement x:Name="MediaElement"
                      AutoPlay="True"
                      AreTransportControlsEnabled="True"
                      RealTimePlayback="True"
                      PlaybackRate="1"
                      Visibility="{x:Bind IsWebmEnabled, Mode=OneWay, Converter={StaticResource BoolToVis}}"/>
        <StackPanel VerticalAlignment="Center">
            <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}"
                          Height="50"
                          Width="50"/>
            <TextBlock Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}"
                   TextAlignment="Center"
                   Text="Просмотр .webm выключен. Видео будет открыто в стороннем приложении."
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   Padding="10"
                   Visibility="{x:Bind IsWebmEnabled, Mode=OneWay, Converter={StaticResource BoolToVisInverse}}"/>
        </StackPanel>
    </Grid>
</Page>
