<Page
    x:Class="Win2ch.Views.BoardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="using:Template10.Behaviors"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:controls="using:Template10.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Win2ch.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Win2ch.ViewModels"
    xmlns:m="using:Win2ch.Models"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:BoardViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <DataTemplate x:Key="PostTemplate" x:DataType="m:Post">
            <Grid>
                <TextBlock Text="{Binding Comment}"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ThreadTemplate" x:DataType="m:Thread">
            <ItemsControl ItemsSource="{x:Bind Posts}" ItemTemplate="{StaticResource PostTemplate}"/>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <controls:PageHeader Frame="{x:Bind Frame}">
            <controls:PageHeader.Content>
                <TextBlock Text="{Binding Board.Name}" TextTrimming="CharacterEllipsis"/>
            </controls:PageHeader.Content>
            <Interactivity:Interaction.Behaviors>
                <Behaviors:EllipsisBehavior Visibility="Auto" />
            </Interactivity:Interaction.Behaviors>
        </controls:PageHeader>

        <ScrollViewer Grid.Row="1">
            <Grid>
                <ItemsControl ItemsSource="{x:Bind ViewModel.Threads}" ItemTemplate="{StaticResource ThreadTemplate}"/>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
