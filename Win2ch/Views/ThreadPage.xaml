<Page
    x:Class="Win2ch.Views.ThreadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win2ch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Win2ch.ViewModels"
    xmlns:controls="using:Template10.Controls"
    xmlns:models="using:Win2ch.Models"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:ThreadViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <controls:PageHeader Frame="{x:Bind Frame}">
            <controls:PageHeader.Content>
                <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Title, Converter={StaticResource ToUpper}}"
                           Style="{StaticResource PageHeaderTitle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                           Tapped="Header_OnTapped"/>
            </controls:PageHeader.Content>
            <controls:PageHeader.PrimaryCommands >
                <AppBarButton Icon="Refresh" Label="Обновить" Command="{Binding RefreshCommand}"/>
            </controls:PageHeader.PrimaryCommands>
        </controls:PageHeader>

        <ListView Grid.Row="1" ItemsSource="{Binding Posts}" x:Name="Posts" SelectionMode="None" HorizontalContentAlignment="Stretch"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0 0 0 -2">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel  Orientation="Vertical" VirtualizationMode="Recycling"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Post">
                    <Border BorderBrush="{ThemeResource ThreadBackgroundBrush}" BorderThickness="0 0 0 2" Margin="10 0">
                        <Grid Margin="0 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{x:Bind Subject}" Visibility="{Binding Subject, Converter={StaticResource StrToVis}}"
                                FontWeight="Bold" TextWrapping="Wrap" Foreground="{StaticResource CustomColorBrush}"
                                x:Phase="1"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Bind Name}" FontWeight="Bold" x:Phase="1"/>

                                <TextBlock Grid.Column="1"
                                           Text="#"
                                           Margin="5 0 0 0"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource CustomColorBrush}"/>
                                <TextBlock
                                    Text="{x:Bind Num}" FontWeight="Bold"
                                    Foreground="{StaticResource CustomColorBrush}"
                                    HorizontalAlignment="Right"
                                    Grid.Column="2"
                                    x:Phase="1"/>
                            </Grid>

                            <!--<RichTextBlock Grid.Row="3"  TextWrapping="Wrap"
                            local:HtmlToRichTextBlockConverter.Html="{x:Bind Comment}"
                            IsTextSelectionEnabled="False"
                            x:Phase="3"/>-->

                            <TextBlock Grid.Row="3"
                                       Margin="0 5"
                                       TextWrapping="Wrap" IsTextSelectionEnabled="True" Text="{x:Bind Text}"
                                       x:Phase="3"/>

                            <TextBlock Grid.Row="4" Opacity="0.7" Text="{x:Bind Date}" FontSize="13" x:Phase="2"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ListViewItemPresenter SelectionCheckMarkVisualEnabled="False"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Button Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="10" Opacity="0.7" Padding="10" Click="ScrollDown_OnClicked">
            <SymbolIcon Symbol="Up" RenderTransformOrigin="0.5 0.5">
                <SymbolIcon.RenderTransform>
                    <RotateTransform Angle="180"/>
                </SymbolIcon.RenderTransform>
            </SymbolIcon>
        </Button>

        <Border Grid.Row="2" BorderThickness="0 2 0 0" BorderBrush="{ThemeResource ThreadBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Width="40">
                    <SymbolIcon Symbol="More" Opacity="0.8"/>
                </Button>
                <TextBox Grid.Column="1"
                         PlaceholderText="Быстрый ответ"
                         Padding="10"
                         BorderThickness="0"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Text="{Binding FastReplyText, Mode=TwoWay}"/>
                <Button Grid.Column="2"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Width="40"
                        Command="{x:Bind ViewModel.FastReplyCommand}">
                    <SymbolIcon Symbol="Send"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
