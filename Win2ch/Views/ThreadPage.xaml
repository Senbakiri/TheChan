<Page
    x:Class="Win2ch.Views.ThreadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win2ch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Win2ch.ViewModels"
    xmlns:controls="using:Template10.Controls"
    xmlns:models="using:Win2ch.Models"
    xmlns:c="using:Win2ch.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:Template10.Behaviors"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <Style x:Key="ReplyStyle" TargetType="c:PostControl">
            <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource ThreadBackgroundBrush}"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Page.Resources>
    
    <Page.DataContext>
        <vm:ThreadViewModel/>
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="Replies"
                Grid.RowSpan="4"
                Canvas.ZIndex="3">
            <Canvas.ChildrenTransitions>
                <TransitionCollection>
                    <PopupThemeTransition/>
                </TransitionCollection>
            </Canvas.ChildrenTransitions>
        </Canvas>
        
        
        <controls:PageHeader Frame="{x:Bind Frame}" Grid.Row="0">
            <controls:PageHeader.Content>
                <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Title, Converter={StaticResource ToUpper}}"
                           Style="{StaticResource PageHeaderTitle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                           Tapped="Header_OnTapped"/>
            </controls:PageHeader.Content>
            <interactivity:Interaction.Behaviors>
                <behaviors:EllipsisBehavior Visibility="Collapsed" />
            </interactivity:Interaction.Behaviors>
        </controls:PageHeader>

        <Grid Grid.Row="1"
              Visibility="{x:Bind ViewModel.IsWorking, Converter={StaticResource BoolToVis}, Mode=OneWay}"
              Background="{StaticResource CustomColorBrush}"
              Canvas.ZIndex="2"
              Height="50"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <ProgressRing Foreground="White"
                          IsActive="True"
                          VerticalAlignment="Center"
                          Margin="10 0"/>
            <TextBlock Grid.Column="1"
                       Text="{x:Bind ViewModel.JobStatus, Mode=OneWay}"
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Grid>

        <ListView x:Name="Posts"
                  Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Posts}"
                  SelectionMode="None"
                  HorizontalContentAlignment="Stretch"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  Margin="0 0 0 -2">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" VirtualizationMode="Recycling"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Post">
                    <Border BorderBrush="{ThemeResource ThreadBackgroundBrush}" BorderThickness="0 0 0 2" Margin="10 0">
                        <c:PostControl Post="{x:Bind}"
                                       Margin="0 10"
                                       Reply="PostControl_OnReply"
                                       ImageClick="PostControl_OnImageClick"
                                       ReplyShowRequested="PostControl_OnReplyShowRequested"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ListViewItemPresenter SelectionCheckMarkVisualEnabled="False"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Button Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="10" Opacity="0.7" Padding="10" Click="ScrollDown_OnClicked">
            <SymbolIcon Symbol="Up" RenderTransformOrigin="0.5 0.5">
                <SymbolIcon.RenderTransform>
                    <RotateTransform Angle="180"/>
                </SymbolIcon.RenderTransform>
            </SymbolIcon>
        </Button>

        <Border Grid.Row="2" BorderThickness="0 2 0 0" BorderBrush="{ThemeResource ThreadBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Width="40"
                        Command="{x:Bind ViewModel.AdvancedPostingCommand}">
                    <SymbolIcon Symbol="More" Opacity="0.8"/>
                </Button>
                <TextBox x:Name="FastReplyTextBox"
                         Grid.Column="1"
                         PlaceholderText="Быстрый ответ"
                         Padding="10"
                         BorderThickness="0"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Text="{x:Bind ViewModel.FastReplyText, Mode=TwoWay}"
                         MaxHeight="200"/>
                <Button Grid.Column="2"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Width="40"
                        Command="{x:Bind ViewModel.FastReplyCommand}">
                    <SymbolIcon Symbol="Send"/>
                </Button>
            </Grid>
        </Border>

        <CommandBar Grid.Row="3">
            <AppBarButton Icon="Refresh"
                          Label="Обновить"
                          Command="{x:Bind ViewModel.RefreshCommand}"
                          Foreground="{ThemeResource AppBarItemForegroundThemeBrush}">
                <AppBarButton.RenderTransform>
                    <RotateTransform/>
                </AppBarButton.RenderTransform>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            From="0"
                            To="360"
                            Storyboard.TargetProperty="(AppBarButton.RenderTransform)(RotateTransform.Angle)"
                            Duration="0:0:2"
                            RepeatBehavior="Forever"/>
                    </Storyboard>
                </BeginStoryboard>
            </AppBarButton>
        </CommandBar>
    </Grid>
</Page>
